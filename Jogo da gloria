#include <iostream>
#include <cstdlib>
#include <chrono>
#include <thread>
#include <ctime>

using namespace std;

int tam = 30;

void aparecer(int p1, int p2, int casas[])
{
    cout << "Jogo Da Glória" << endl;
    for (int i = 0; i < tam; i++)
    {
        if (i == p1 && i == p2)
        {
            cout << "[1-2]";
        }
        else if (i == p1)
        {
            cout << "[1]";
        }
        else if (i == p2)
        {
            cout << "[2]";
        }
        else if (casas[i] == 1)
        {
            cout << "[*]";
        }
        else
        {
            cout << "[-]";
        }
    }
}
int main(){
    int player1 = 0;
    int player2 = 0;
    int tempo = 3;
    char pessoa;
    int casas[tam];

    srand(time(NULL));
    int dado = rand() % 6 + 1;

    cout << "Bem Vindo ao Jogo da Glória" << endl;
    this_thread::sleep_for(chrono::seconds(2));

    while (tempo > 0){
        cout << tempo << endl;
        this_thread::sleep_for(chrono::seconds(1));
        tempo--;
    }

    cout << "Jogo Irá Começar: " << endl;
    cout << "Pressione ENTER para poder continuar";
    cin.get();
    system("clear");

    aparecer(player1, player2, casas);
    // for (int i = 0; i<=30;i++);
    this_thread::sleep_for(chrono::seconds(2));
    cout << endl;
    cout << "Clique ENTER para que o dado GIRE:";
    cin.get();
    cout << "Tu tiraste: " << dado << endl;
}
